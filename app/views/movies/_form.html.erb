<div class="container">
  
  <div class="row">
    
  <div class="col-md-8">
    <%= simple_form_for(@movie) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :hotness %>
    <%= f.input :image_url %>
    <%= image_tag @movie.image_url %>
    <%= f.input :synopsis %>
    <%= f.input :rating %>
    <%= f.input :genre %>
    <%= f.input :director %>
    <%= f.input :release_date %>
    <%= f.input :runtime %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success btn-block" %>
  </div>
<% end %>
  </div>

  </div>

</div>

